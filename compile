#!/bin/bash

# Runs catkin_make with the correct whitelist entries.

# beagle = all packages for the beagle bone
# mm = Mouse Monitor for pc
# pc = All other pc packages

if [ -z "$1" ]
then
        echo "Give packages to compile."
fi

if [ "$1" == "beagle" ]
then
	sudo ntpdate -b -s -u ntp.ubuntu.com pool.ntp.org
	catkin_make -DCATKIN_WHITELIST_PACKAGES="minotaur_common;mouse_monitor_beagle;robot_control;minotaur_maze" -DUSE_MOUSE_SENSOR="TRUE"
elif [ "$1" == "mm" ]
then
	catkin_make -DCATKIN_WHITELIST_PACKAGES="mouse_monitor_beagle;mouse_monitor_pc"
elif [ "$1" == "pc" ]
then
	catkin_make -DCATKIN_WHITELIST_PACKAGES="minotaur_common;minotaur_common_qt;pid_monitor;minotaur_maze"
elif [ "$1" == "maze" ]
then
	catkin_make -DCATKIN_WHITELIST_PACKAGES="minotaur_common;robot_control;minotaur_maze"
elif [ "$1" == "all" ]
then
	catkin_make -DCATKIN_WHITELIST_PACKAGES="minotaur_common;minotaur_common_qt;robot_control;pid_monitor;minotaur_maze" -DUSE_MOUSE_SENSOR="TRUE" -DBUILD_TEST_FILES="TRUE"
elif [ "$1" == "clean" ]
then
	rm -rf devel/ build/
fi

